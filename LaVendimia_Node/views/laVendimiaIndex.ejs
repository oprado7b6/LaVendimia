			<div class=".col-sm-12 .col-md-12 .col-lg-12 .col-xl-12">
				<h2 class="brand-logo right">La Vendimia</h2>
			</div>
		</div>
		<div class="row">
		<div class=".col-sm-3 .col-md-3 .col-lg-6 .col-xl-6">
		<ul class="navbar-nav left hide-on-med-and-down">
			<!-- Dropdown -->
			<li class="nav-item dropdown">
				<a class="nav-link dropdown-toggle" id="navbardrop" data-toggle="dropdown">
					Inicio
				</a>
				<div class="dropdown-menu">
					<a class="dropdown-item" id="ddventas">Ventas</a>
					<a class="dropdown-item" id="ddclientes">Clientes</a>
