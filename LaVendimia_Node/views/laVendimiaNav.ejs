<!DOCTYPE html>
<html lang="en">
<head>
	<title>La Vendimia</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="css/laVendimia.css">
	<link rel="stylesheet" type="text/css" href="bootstrap/dist/css/bootstrap.css">

</head>
<body style="height:1000px">

		<nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
			<ul class="navbar-nav">
				<li class="nav-item">
					<h2>La Vendimia</h2>
				</li>
				<!-- Dropdown -->
				<li class="nav-item dropdown">
				<a class="nav-link dropdown-toggle" id="navbardrop" data-toggle="dropdown">
					Inicio
				</a>
				<div class="dropdown-menu">
					<a class="dropdown-item" id="ddventas">Ventas</a>
					<a class="dropdown-item" id="ddclientes">Clientes</a>
					<a class="dropdown-item" id="ddarticulo">Art&iacute;culos</a>
					<a class="dropdown-item" id="ddconfiguracion">Configuraci&oacute;n</a>
				</div>
				</li>
			</ul>
		</nav>
		<div id="durl" class="container-fluid" style="margin-top:80px">
			<div class="container">
				<div id="ventas" class="ventas">
					<div class="nuevaventa">
						<button data-toggle="modal" data-target="#registroVentaModal" id="btnRegistroVenta" class="btn btn-primary">
							<i class="fas fa-plus-circle" style="font-size: 24px; color:green"></i> Nueva Venta
						</button>
					</div>
					<div class="ventasactivas">
						<h5>Ventas Activas</h5>
						<table id="tblVentasActivas" class="table display">
						<thead class="thead-light">
						<tr>
							<th>Folio Venta</th>
							<th>Clave Cliente</th>
							<th>Nombre</th>
							<th>Total</th>
							<th>Fecha</th>
							<th>Estatus</th>
						</tr>
						</thead>
						<tbody>
						<% for (var i =0; i < ventas.length; i++){ %>
						<tr>
							<td><%= ventas[i].folio %></th>
							<td><%= ventas[i].cliente %> </td>
							<td><%= ventas[i].vendedor %></td>
							<td><%= ventas[i].total %></td>
							<td><%= ventas[i].enganche %></td>
							<td><%= ventas[i].estatus %></td>
						</tr>
						<% } %>
						</tbody>
						<tfoot class="thead-light">
						<tr>
							<th>Folio Venta</th>
							<th>Clave Cliente</th>
							<th>Nombre</th>
							<th>Total</th>
							<th>Fecha</th>
							<th>Estatus</th>
						</tr>
						</tfoot>
						</table>
					</div>
				</div>
				<div id="registroventa" class="registroventa modal">
					<div>
					<form id="registroVentas">
						<h5>Registro de Ventas</h5>

						<div class="input-group mb-3 input-group-sm">
							<div class="input-group-prepend">
								<span class="input-group-text folio">Folio Venta</span>
							</div>
							<input id="folio" type="text" class="form-control folio" value="000000" readonly>
						</div>

						<div class="input-group mb-3 input-group-sm">
							<div class="input-group-prepend">
								<span class="input-group-text busca">Cliente</span>
							</div>
							<input id="id_cliente" type="hidden">
							<input id="nombre_cliente" type="text" class="form-control">
							<input id="rfc" type="text" class="form-control" readonly>
						</div>
						<div class="input-group mb-3 input-group-sm">
							<div class="input-group-prepend">
								<span class="input-group-text busca">Art&iacute;culo</span>
							</div>
							<input id="id_articulo" type="hidden">
							<input id="cantidad" type="hidden">
							<input id="desc_articulo" type="text" class="form-control">
							<i class="fas fa-plus-square" style="font-size:32px"></i>
						</div>
						<div>
							<table class="table table-hover">
							<thead>
							<tr>
								<th>Descripci&oacute;n Art&iacute;culo</th>
								<th>Modelo</th>
								<th>Cantidad</th>
								<th>Precio</th>
								<th>Importe</th>
							</tr>
							</thead>
							<tbody>
							<tr>
								<td>John</td>
								<td>Doe</td>
								<td>john@example.com</td>
								<td>John</td>
								<td>John</td>
							</tr>
							<tr>
								<td>John</td>
								<td>Doe</td>
								<td>john@example.com</td>
								<td>John</td>
								<td>John</td>
							</tr>
							</tbody>
							</table>
						</div>
					</form>
					</div>
				</div>
				<div id="abonosMensuales" class="modal abonosMensuales">
					<div class="modal-dialog">
						<div class="modal-content">
							<!-- Modal Header -->
							<div class="modal-header">
								<h4 class="modal-title">Abonos Mensuales</h4>
								<button type="button" class="close" data-dismiss="modal">&times;</button>
							</div>
							<!-- Modal body -->
							<div class="modal-body">
								<form id="abonos">
								
								<div>
									<table class="table table-hover">
									<thead class="thead-light">
									<tr>
										<th colspan="5" style="align: center">ABONOS MENSUALES</th>
									</tr>
									</thead>
									<tbody>
									<tr>
										<td>3 Abonos de </td>
										<td></td>
										<td>Total a pagar : </td>
										<td>Se ahorra: </td>
										<td><input id="abono" type="radio" value="3"></td>
									</tr>
									<tr>
										<td>6 Abonos de </td>
										<td></td>
										<td>Total a pagar :</td>
										<td>Se ahorra:</td>
										<td><input id="abono" type="radio" value="6"></td>
									</tr>
									<tr>
										<td>9 Abonos de </td>
										<td></td>
										<td>Total a pagar :</td>
										<td>Se ahorra:</td>
										<td><input id="abono" type="radio" value="9"></td>
									</tr>
									<tr>
										<td>12 Abonos de </td>
										<td></td>
										<td>Total a pagar :</td>
										<td>Se ahorra: </td>
										<td><input id="abono" type="radio" value="12"></td>
									</tr>
									</tbody>
									</table>
								</div>
								</form>
							</div>
							<!-- Modal footer -->
							<div class="modal-footer">
								<button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		
<script type="text/javascript">

$(document).ready( function() {
    $("#ddventas").on("click", function() {
        $("#durl").load("ventas.html");
    });
	$("#btnRegistroVenta").click(function (event) {
		$("#registroVentaModal").modal("show");
	});
});

function noDisponible(modulo) {
	document.getElementById("durl").innerHTML = '<div id="nodisponible" class="nodisponible"><h1>M&oacute;dulo de ' + modulo + ' est&aacute; en proceso de liberaci&oacute;n.</h1><div>';
}

document.getElementById("ddclientes").onclick = function() { 
	noDisponible("Clientes");
}

document.getElementById("ddarticulo").onclick = function() { 
	noDisponible("Art&iacute;culo");
} 
document.getElementById("ddconfiguracion").onclick = function() { 
	noDisponible("Configuraci&oacute;n");
} 
 
</script> 
<script src="jquery/dist/jquery.min.js"></script>
<script src="bootstrap/dist/js/bootstrap.js"></script>
</body>
</html>